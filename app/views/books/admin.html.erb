<h2><%= @book.title %></h2>
<h3><%= @book.author %>, <%= @book.year %></h3>
<%= render 'availability' %>

<div class="adminDetails">
<%= link_to "Add a new copy", new_book_copy_path(@book, @copy) %>
<%= link_to "Edit Book", edit_book_path(@book) %>
<%= link_to "Remove", @book, method: :delete, data: { confirm: "Are you sure?" } %> 
</div>

<div class="bookInfo">
  <% if @book.cover_image? %>
    <div class="bookCover">
      <%= image_tag @book.cover_image.url, class: "bookImage" %>
    </div>
  <% end %>

  <div class="bookDetails">
    <% if @book.description? %>
      <%= simple_format(@book.description) %>
    <% end %>  
    <% if @book.link? %>
      <%= link_to "More info", @book.link %>
    <% end %> 
  </div>   
</div>