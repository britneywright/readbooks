<h3>Welcome! Browse our selection of books and if you see one you like request to borrow it.</h3>
<ul class="bookList">
  <% @books.each do |book| %>
  <li class="singleBook">
    <%= link_to (image_tag(book.cover_image.url, :class=> "bookImage")), book %>
    <h3><%= link_to book.title, book %></h3>
<% if book.available %>
  <small class="available">Available</small>
  <% else %> 
  <small class="unavailable">Not available at this time</small>
  <% end %>
  </li>
  <% end %>
 </ul>